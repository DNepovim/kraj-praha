{
    "name": "dnepovim/wordpress-base",
    "description": "Wordpress scaffolding.",
    "repositories":[
      {
        "type":"composer",
        "url":"https://wpackagist.org"
      }
    ],
    "require": {
        "wpackagist-plugin/wp-tracy": "^1.0.5",
        "wpackagist-plugin/meta-box": "^4.8.7",
        "wpackagist-plugin/html-editor-syntax-highlighter": "^1.7.2",
        "wpackagist-plugin/feedwordpress": "^2015.0426",
        "wpackagist-plugin/fb-last-posts": "^1.0",
        "facebook/php-sdk-v4": "^5.2"
    },
    "extra"       : {
      "installer-paths": {
        "wp-content/mu-plugins/{$name}": ["type:wordpress-plugin"]
      }
    },
