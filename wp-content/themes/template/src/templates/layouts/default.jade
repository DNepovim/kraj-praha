doctype html
html(lang=get_bloginfo('language'))
    head
        meta(charset!=bloginfo('charset'))
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width,initial-scale=1')

        title!=wp_title( ' | ', true, 'right' ) . bloginfo( 'name' )

        meta(name='description', content!=bloginfo('description'))
        meta(name='author', content='Dominik Bláha / www.dombl.cz')

        - $currentUrl = home_url(add_query_arg(array(),$wp->request))

        meta(property='og:title', content!=wp_title( ' | ', true, 'right' ) . bloginfo( 'name' ))
        meta(propertu='og:url', content!=$currentUrl)
        meta(property='og:type', content='article')
        meta(property='og:image:width', content='1200')
        meta(property='og:image:height', content='630')
        meta(name='twitter:card', content='summary_large_image')


        - if (is_single() && has_post_thumbnail()):
            - $thumbnail = wp_get_attachment_url( get_post_thumbnail_id($post->ID), 'og')
            meta(property='og:image', content=$thumbnail)
            - $content = wp_strip_all_tags($post->post_content)
            - $position = strpos($content, ' ', 200)
            - $excerpt = substr($content, 0, $position) . '…'
            meta(property='og:description', content!=$excerpt)
        - else:
            meta(property='og:image', content=get_template_directory_uri() + '/dist/images/logo-og.png')
            meta(property='og:description', content!=bloginfo('description'))
        - endif

        link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i', rel='stylesheet')

        link(rel='shortcut icon', href=get_template_directory_uri() + '/favicon.ico', type='image/x-icon')

        - $stylesheet = !empty($_COOKIE['style']) ? explode(' ', $_COOKIE['style'])[0] : 'first'
        link(rel='stylesheet' href=get_template_directory_uri() + '/dist/' + $stylesheet + '.min.css', media='screen')

        //link(rel='stylesheet', href='dist/print.min.css', media='print')

        - wp_head()
