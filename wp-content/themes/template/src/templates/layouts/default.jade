doctype html
html(lang=get_bloginfo('language'))
    head
        meta(charset!=bloginfo('charset'))
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width,initial-scale=1')

        title!=wp_title( ' | ', true, 'right' ) . bloginfo( 'name' )

        meta(name='description', content!=bloginfo('description'))
        meta(name='author', content='Dominik Bláha / www.dombl.cz')

        - $currentUrl = home_url(add_query_arg(array(),$wp->request))

        meta(property='og:title', content!=wp_title( ' | ', true, 'right' ) . bloginfo( 'name' ))
        meta(propertu='og:url', content!=$currentUrl)
        meta(property='og:type', content='article')
        meta(property='og:image:width', content='1200')
        meta(property='og:image:height', content='630')
        meta(name='twitter:card', content='summary_large_image')


        - if (is_single() && has_post_thumbnail()):
            - $thumbnail = wp_get_attachment_url( get_post_thumbnail_id($post->ID), 'og')
            meta(property='og:image', content=$thumbnail)
            - $content = wp_strip_all_tags($post->post_content)
            - $position = strpos($content, ' ', 200)
            - $excerpt = substr($content, 0, $position) . '…'
            meta(property='og:description', content!=$excerpt)
        - else:
            meta(property='og:image', content=get_template_directory_uri() + '/dist/images/logo-og.png')
            meta(property='og:description', content!=bloginfo('description'))
        - endif

        link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i', rel='stylesheet')

        link(rel='shortcut icon', href=get_template_directory_uri() + '/favicon.ico', type='image/x-icon')

        link(rel='stylesheet', title='first' href=get_template_directory_uri() + '/dist/first.min.css', media='screen')
        link(rel='alternate stylesheet', title='second' href=get_template_directory_uri() + '/dist/second.min.css', media='screen')
        link(rel='alternate stylesheet', title='third' href=get_template_directory_uri() + '/dist/third.min.css', media='screen')

        script(type='text/javascript', src=get_template_directory_uri() + '/dist/critical.min.js')

        //link(rel='stylesheet', href='dist/print.min.css', media='print')

        - wp_head()
    body(class=implode(' ', get_body_class()))

        - include_once 'dist/symbol/shapes.svg'

        block top

        .container
            svg.container__border.container__border--top
                use(xlink:href='#border-top')

            include ../parts/header

            block content

            include ../parts/sidebar

            svg.container__border.container__border--bottom
                use(xlink:href='#border-bottom')

            .color-switcher#color-switcher(style="display:none")
                button.color-switcher-button.first(onClick="setActiveStyleSheet('first')", data-stylesheet=get_template_directory_uri() + '/dist/first.min.css')
                button.color-switcher-button.second(onClick="setActiveStyleSheet('second')", data-stylesheet=get_template_directory_uri() + '/dist/second.min.css')
                button.color-switcher-button.third(onClick="setActiveStyleSheet('third')", data-stylesheet=get_template_directory_uri() + '/dist/third.min.css')

        include ../parts/footer

        block bottom

        script(src='https://code.jquery.com/jquery-2.2.0.min.js')
        script(src='https://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js')
        script(src=get_template_directory_uri() + '/dist/main.min.js')
