extends two-column

block top
  - if (isset($_GET['modal']) && $_GET['modal']):
    input#addPost.modal__check(type='checkbox', checked='checked')
  - else:
    input#addPost.modal__check(type='checkbox')
  - endif

  include ../parts/add-post
  label.modal__outside(for='addPost')

block main

block aside

  .button.button--call.modal__button
    svg.button__background
      use(xlink:href='#rect')
    label.link.button__link.modal__label(for='addPost')
      ='Přidat příspěvek'

  section.content-box.content-box--aside.content-box--fb.fb
    svg.content-box__background
      use(xlink:href='#rect')
    a.label.label--facebook(href='https://facebook.com/skautipraha', targer='_blank') Z našeho facebooku
    include ../parts/facebook

  section.content-box.content-box--aside.content-box--krizovatka.rss
    svg.content-box__background
      use(xlink:href='#rect')
    a.label.label--first(href='http://krizovatka.skaut.cz', target='_blank') Novinky ze skautské křižovatky
    - query_posts( array('post_type' => 'rss', 'showposts' => 5))
    include ../parts/wrapper--aside

