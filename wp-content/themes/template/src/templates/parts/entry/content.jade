- $classes .= (is_single()||is_page()) ? ' single' : null;
article.post.content-box__post.content(class= '<?php echo $classes; ?>')

    //- THUMBNAIL

    - if($thumb = wp_get_attachment_url( get_post_thumbnail_id($post->ID))):
        figure.thumbnail.content__thumbnail(style='background-image: url('+ $thumb + ')')
            svg.thumbnail__frame
                use(xlink:href='#frame')
    - endif

    //- TITLE

    - if (is_single()||is_page()):
        h1.title.content__title
            a.link(href=esc_url( get_permalink() ))
                - the_title()
    - else:
        h2.title.content__title
            a.link(href=esc_url( get_permalink() ))
                - the_title()
    - endif

    //- META

    - if (!is_page()):
        p.date.content__date
            - the_time( get_option( 'date_format' ) )
    - endif

    //- EXCERPT

    - if (is_single()||is_page()):
      - if (has_excerpt(get_the_ID())):
        .excerpt.text.content__excerpt
          - the_excerpt()
      - endif
    - else:
      .excerpt.text.content__excerpt
        - the_excerpt()
    - endif

    //- CONTENT

    - if (is_single()||is_page()):
        .text.content__text
            - the_content()
    - endif

    //- BUTTON

    - if (!(is_single()||is_page())):
        .button.content__button
            svg.button__background
                |<use xlink:href='#shape-<?php echo rand(1, 3) ?>'></use>
            a.link.button__link(href=esc_url( get_permalink()))
                | Číst dál
    - endif
