- if (have_posts()):
  - while (have_posts()):
    - the_post();
    - $id = get_the_ID();
    - $meta = get_post_meta($id)
    - $thumb = wp_get_attachment_url( get_post_thumbnail_id($post->ID))
    - $classes = get_post_type()
    - if(!empty($thumb)):
      - $classes .= 'thumb'
    - endif
    article.post.content-box__post.excerpt(class= '<?php echo $classes ?>')
      - if($thumb):
        figure.thumbnail.excerpt__thumbnail(style='background-image: url('+ $thumb + ')')
          svg.thumbnail__frame
            use(xlink:href='#frame')
      - endif
      h2.title.excerpt__title
        a.link(href=esc_url( get_permalink() ))
          - the_title()
      p.date.excerpt__date
        - the_time( reset($meta['fptc_update_time']) )
      p.text.excerpt__text
        - echo reset($meta['fptc_message'])
      .button.excerpt__button
        svg.button__background
          |<use xlink:href='#shape-<?php echo rand(1, 3) ?>'></use>
        a.link.button__link(href=esc_url( get_permalink()))
          | Číst dál
  - endwhile
- endif
