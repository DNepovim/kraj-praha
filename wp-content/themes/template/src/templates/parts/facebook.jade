- $args = array('post_type'  => 'fb','showposts'  => 5)
- query_posts( $args)

- if (have_posts()):
  - while (have_posts()):

    - the_post();

    - $classes = get_post_type()

    - $link = 'https://www.facebook.com/'
    - $link .= get_option( 'fptc_option' )['page_id']
    - $link .= '/posts/'
    - $link .= explode('_', get_post_meta($id, 'fptc_fb_id', true))[1]

    article.content.content-box__post.facebook(class=$classes)
      a(href=$link, target='_blank')
        != wp_trim_words(get_post_meta($id, 'fptc_message', true), 20)

  - endwhile
- endif
