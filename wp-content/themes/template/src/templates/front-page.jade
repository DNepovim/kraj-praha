extends layouts/default


block main
    - query_posts( array('post_type' => array('event', 'post'), 'showposts' => 6))
    include parts/wrapper

block aside
    section.content-box.content-box--aside.content-box--krizovatka.grid-s-24
        a.label.label--first(href='https://facebook.com/skautipraha', targer='_blank') Novinky ze skautské křižovatky
        - query_posts( array('post_type' => array('krizovatka'), 'showposts' => 5))
        include parts/wrapper

    section.content-box.content-box--aside.content-box--fb.grid-s-24
        a.label.label--facebook(href='https://facebook.com/skautipraha', targer='_blank') Z našeho facebooku
        - query_posts( array('post_type' => array('facebook'), 'showposts' => 5))
        - if (have_posts()):
            - while (have_posts()):
                - the_post();
                - $id = get_the_ID();
                - $meta = get_post_meta($id)
                article.post.content-box__post.excerpt(class=get_post_type())
                    - if($thumb = wp_get_attachment_url( get_post_thumbnail_id($post->ID))):
                        figure.thumbnail.excerpt__thumbnail(style='background-image: url('+ $thumb + ')')
                            svg.thumbnail__frame
                                use(xlink:href='#frame')
                    - endif
                    h2.title.excerpt__title
                        a.link(href=esc_url( get_permalink() ))
                            - the_title()
                    p.date.excerpt__date
                        - the_time( reset($meta['fptc_update_time']) )
                    p.text.excerpt__text
                        - echo reset($meta['fptc_message'])
                    .button.excerpt__button
                        svg.button__background
                            |<use xlink:href='#shape-<?php echo rand(1, 3) ?>'></use>
                        a.link.button__link(href=esc_url( get_permalink()))
                            | Číst dál
            - endwhile
        - endif

